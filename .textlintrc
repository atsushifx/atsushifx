{
  "filters": {
    "allowlist": [
      ".textlint/allowlist.yml"
    ]
  },
  "rules": {
    "ginger": {
      "skipPatterns": [
        "eXtreme",
        "Atsyshi"
      ]
    },
    "write-good": {
      "passive": true,
      "thereIs": true,
      "adverb": true
    },
    "common-misspellings": {},
    "spelling": {
      "language": "en",
      "skipPatterns":[
        "Atsushi",
        "atsushifx",
        "eXtreme",
        "XPer",
        "OCaml",
        "LinkedIn",
        "2c"
      ],
      "suggestCorrections": true
    },
    "terminology": {
      "defaultTerms": true
    },
    "@proofdict/proofdict": {
      "dictURL": "https://atsushifx.github.io/proof-dictionary/"
    },
    "@textlint-rule/no-unmatched-pair": true
  }
}
